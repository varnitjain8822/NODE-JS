<%- include('PARTIALS/head.ejs', { pagetitle: 'Book Your Room' }) %>
<link rel="stylesheet" href="/home.css">
<link rel="stylesheet" href="output.css">
</head>
<body>
  <%- include('PARTIALS/header.ejs') %>

  <h1 class="text-center text-3xl font-bold my-4">WELCOME TO AIRBNB</h1>
  <div class="text-center mb-4"></div>
    <a href="/form" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Click to book your room</a>
  </div>

  <h2>Registered Users</h2>
  <div style="display: grid; grid-gap: 20px; padding: 16px; width: 40px " ></div>
    <% for (let user of users) { %>
      <div style="background-color: white; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); padding: 16px;"></div>
        <% if (user.imageUrl) { %>
          <img src="<%= user.imageUrl %>" alt="Room image" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px 8px 0 0;">
        <% } %>
        <div style="padding: 16px;">
          <h3 style="font-weight: bold; font-size: 1.25rem; margin-bottom: 8px;"><%= user.name %></h3>
          <div style="margin-top: 8px;">
            <p><strong>Room Type:</strong> <%= user.room %></p>
            <p><strong>Price:</strong> $<%= user.price %></p>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>
