<%- include('PARTIALS/head.ejs', { pagetitle: 'Book Your Room' }) %>
<link rel="stylesheet" href="/home.css">
<link rel="stylesheet" href="output.css">
</head>
<body>
  <%- include('PARTIALS/header.ejs') %>

  <h1 class="text-center text-3xl font-bold my-4"> WELCOME TO AIRBNB </h1>

  <div class="text-center mb-4">
    <a href="/form" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
      Click to book your room
    </a>
  </div>

  <div style="background-color: aqua;"><h2 style="text-align: center ;">Registered Users</h2></div>
  <div class="users-grid">
    <% if (Array.isArray(users) && users.length > 0) { %>
      <% for (let user of users) { %>
        <div class="user-card">
          <% if (user.imageUrl) { %>
            <img src="<%= user.imageUrl %>" alt="Room image">
          <% } %>
          <div style="padding: 16px;">
            <h3><%= user.name %></h3>
            <p><strong>Room Type:</strong> <%= user.housename %></p>
            <p><strong>Price:</strong> $<%= user.price %></p>
            <p><strong>Room Type:</strong> <%= user.location %></p>
          </div>
        </div>
      <% } %>
    <% } else { %>
      <p class="text-center">No users registered yet.</p>
    <% } %>
  </div>
</body>
</html>
