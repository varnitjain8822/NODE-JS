<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Tailwind CSS CDN for quick styling -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <!-- Header -->
  <header class="bg-white shadow-md mb-6">
    <div class="container mx-auto py-4 px-6">
      <h1 class="text-3xl font-bold text-center text-gray-800">My Favourite Homes</h1>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-6">
    <% if (homes.length === 0) { %>
      <p class="text-center text-gray-500 text-lg mt-20">No favourite homes yet!</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% homes.forEach(home => { %>
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
            <!-- Home Image -->
            <img src="<%= home.imageUrl %>" alt="<%= home.housename %>" class="w-full h-56 object-cover">

            <!-- Card Content -->
            <div class="p-5">
              <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= home.housename %></h2>
              <p class="text-gray-600 mb-1"><strong>Location:</strong> <%= home.location %></p>
              <p class="text-gray-600 mb-3"><strong>Price:</strong> â‚¹<%= home.price %></p>

              <!-- Remove Button -->
              <form action="/favourite/remove" method="POST">
                <input type="hidden" name="id" value="<%= home.id %>">
                <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200">
                  Remove from Favourites
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>

</body>
</html>
