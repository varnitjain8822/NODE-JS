<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container">
    <div class="card">
      
      <!-- Image (Optional) -->
      <% if (home.imageUrl) { %>
        <div class="card-image">
          <img src="<%= home.imageUrl %>" alt="<%= home.housename %>">
        </div>
      <% } %>

      <!-- Title -->
      <h2 class="card-title"><%= home.housename %></h2>

      <!-- Details -->
      <div class="card-content">
        <div class="detail">
          <h3>üìç Location</h3>
          <p><%= home.location %></p>
        </div>
        <div class="detail">
          <h3>üí≤ Price</h3>
          <p class="price">$<%= home.price %> / night</p>
        </div>
        <div class="detail">
          <h3>üÜî Home ID</h3>
          <p class="price"><%= home.id %></p>
        </div>
      </div>
      
      <%- include('../partials/favourite') %>

    </div>
  </main>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f9;
      margin: 0;
      padding: 0;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 90vh;
      padding: 15px;
    }

    .card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      padding: 18px;
      max-width: 380px;
      width: 100%;
      text-align: center;
    }

    .card-image img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 15px;
    }

    .card-title {
      font-size: 22px;
      font-weight: bold;
      margin-bottom: 15px;
      color: #333;
    }

    .card-content {
      text-align: left;
      margin-bottom: 15px;
    }

    .detail {
      border-bottom: 1px solid #eee;
      padding: 8px 0;
    }

    .detail h3 {
      margin: 0;
      font-size: 16px;
      color: #444;
    }

    .detail p {
      margin: 4px 0 0;
      color: #666;
      font-size: 14px;
    }

    .price {
      color: #28a745;
      font-weight: bold;
      font-size: 15px;
    }

    .card-actions {
      margin-top: 12px;
    }

    .btn {
      background: #e63946;
      color: #fff;
      border: none;
      padding: 8px 16px;
      border-radius: 6px;
      font-size: 14px;
      cursor: pointer;
      transition: 0.3s ease;
    }

    .btn:hover {
      background: #c92d3a;
    }
  </style>
</body>
</html>
