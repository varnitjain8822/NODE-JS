<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-sans">

  <!-- Header -->
  <header class="bg-white shadow mb-6">
    <div class="container mx-auto py-4 px-6 flex justify-between items-center">
      <h1 class="text-2xl md:text-3xl font-bold text-gray-800">My Favourite Homes</h1>
      <a href="/homelist" 
         class="text-blue-600 hover:text-blue-800 font-medium transition-colors">
        ← Back to Home List
      </a>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-6 pb-12">
    <% if (!homes || homes.length === 0) { %>
      <div class="text-center mt-20">
        <p class="text-gray-500 text-lg">No favourite homes yet!</p>
        <a href="/homelist" 
           class="inline-block mt-6 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded-lg transition">
          Browse Homes
        </a>
      </div>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% homes.forEach(home => { %>
          <div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition duration-300">
            
            <!-- Home Image -->
            <% if (home.imageUrl) { %>
              <img src="<%= home.imageUrl %>" 
                   alt="<%= home.housename %>" 
                   class="w-full h-56 object-cover">
            <% } else { %>
              <div class="w-full h-56 bg-gray-200 flex items-center justify-center text-gray-500">
                No Image Available
              </div>
            <% } %>

            <!-- Card Content -->
            <div class="p-5">
              <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= home.housename %></h2>
              <p class="text-gray-600 mb-1"><strong>Location:</strong> <%= home.location %></p>
              <p class="text-gray-600 mb-4"><strong>Price:</strong> ₹<%= home.price %></p>

              <!-- Action Buttons -->
              <div class="flex space-x-3">
                <!-- View Details -->
                <a href="/details/<%= home.id %>" 
                   class="flex-1 text-center bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition">
                  View Details
                </a>

                <!-- Remove from Favourites -->
                <form action="/favourite/remove" method="POST" class="flex-1">
                  <input type="hidden" name="id" value="<%= home.id %>">
                  <button type="submit" 
                          class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition">
                    Remove
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>

</body>
</html>
